<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_backgroud_organce"
                    android:padding="5dp"
                    android:text="Nguyễn Phát Thành Tài"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txt_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Bình Luận Mẫu Bình Luận Mẫu Bình Luận Mẫu Bình Luận Mẫu Bình Luận Mẫu Bình Luận Mẫu Bình Luận Mẫu Bình Luận Mẫu Bình Luận Mẫu Bình Luận Mẫu" />

                <TextView
                    android:id="@+id/txt_comment_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:text="28/08/2021"
                    android:textColor="#FFC107" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>